@*It makes since to create a new component for items you render in a for...each statement as soon as state becomes involved.*@

@if (WinePurchases.Any())
{
    <div class="row">
        <div class="table-responsive p-4">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="text-center text-black-50">
                        <th>Vendor Name</th>
                        <th>Purchase Date</th>
                        <th>Purchase Price</th>
                        <th>Researched Price</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var purchase in WinePurchases)
                    {
                        var vendor = Vendors.SingleOrDefault(v => v.Id == purchase.VendorId);
                    <tr>

                        <td><a href="/vendoredit/@purchase.VendorId">@vendor?.Name</a></td>
                        <td>@purchase.PurchaseDate.Value.ToString("D")</td>
                        <td>@purchase.PurchasePrice</td>
                        <td>@purchase.ResearchedPrice</td>
                        <td><a class="btn btn-primary table-btn oi oi-pencil" @onclick="() => WinePurchaseLink_Click(purchase.Id)"></a></td>
                        <td><a @onclick="() => Delete_Click(purchase)"><i class="oi oi-delete"></i></a></td>
                    </tr>
                    }
                </tbody>
            </table>
            <Confirm Id="ConfirmDeleteWinePurchase"
                     ConfirmationChanged="ConfirmDelete_Click"
                     @ref="DeleteConfirmation"
                     ConfirmationTitle="Delete Wine Purchase Confirmation"
                     ConfirmationMessage="Are you sure you want to delete this wine purchase?" />
        </div>
    </div>
}

@if (ShowDialog)
{
    <div class="modal fade show d-block" id="winePurchaseModal" tabindex="1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Wine Purchase</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"
                            @onclick="@Close">
                        &times;
                    </button>
                </div>
                <div class="modal-body pop-message-card">
                    <div class="entity-edit">
                        <EditForm Model="@WinePurchase" OnValidSubmit="HandleValidSubmitAsync">
                            <ObjectGraphDataAnnotationsValidator />
                            <div class="form-group row">
                                <label for="vendor" class="col-sm-3">Vendor:</label>
                                <InputSelect id="vendor" @bind-Value="@WinePurchase.VendorId" class="form-control col-sm-8">
                                    <option value="0">Select a Vendor</option>
                                    @foreach (var vendor in Vendors)
                                        {
                                        <option value="@vendor.Id">@vendor.Name</option>
                                        }
                                </InputSelect>
                                <ValidationMessage class="offset-sm-3" For="@(() => WinePurchase.VendorId)" />
                            </div>
                            <div class="form-group row">
                                <label for="purchase date" class="col-sm-3">Purchase Date:</label>
                                <InputDate id="purchase date" type="date" @bind-Value="@WinePurchase.PurchaseDate" class="form-control col-sm-8" />
                                <ValidationMessage class="offset-sm-3" For="@(() => WinePurchase.PurchaseDate)" />
                            </div>
                            <div class="form-group row">
                                <label for="purchase price" class="col-sm-3">Purchase Price:</label>
                                <InputNumber id="purchase price" @bind-Value="@WinePurchase.PurchasePrice" class="form-control col-sm-8"></InputNumber>
                                <ValidationMessage class="offset-sm-3" For="@(() => WinePurchase.PurchasePrice)" />
                            </div>
                            <div class="form-group row">
                                <label for="researched price" class="col-sm-3">Researched Price:</label>
                                <InputNumber id="researched price" @bind-Value="@WinePurchase.ResearchedPrice" class="form-control col-sm-8"></InputNumber>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary m-1">Save</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"
                                        @onclick="@Close">
                                    Cancel
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (ShowAlertMessage)
{
    <div class="alert @StatusClass">
        <span>@Message</span>
        <a class="btn btn-outline-primary" @onclick="@ClearMessageBanner">&times;</a>
    </div>
}
